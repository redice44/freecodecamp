doctype html
html
  head
    title Pomodoro Clock
    link(rel='stylesheet', href='./stylesheets/reset.css')
    link(rel='stylesheet', href='./stylesheets/tomato-clock/core.css')
    script(src='jquery/dist/jquery.js')
    script(src='javascript/tomato-clock/main.js')
  body
    section#break
      header
        h3 Break Duration
      .controls
        .less -
        .duration
        .more +
    section#session
      header
        h3 Session Duration
      .controls
        .less -
        .duration
        .more +
    section#timer
      header
        h3 Session
      .timer
    button#test-timer Test Timer
